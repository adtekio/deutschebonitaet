.panel.panel-primary
  .panel-heading
    %h3.panel-title Account Details
  .panel-body
    = haml :"_js_tablesorter", :locals => {:tableid => "acctable" }
    %table#acctable.colorit.w-100p.tablesorter
      %thead
        %tr
          %th Owner
          %th Account Number
          %th Bank Code
          %th Iban
          %th.txa-r Balance
      %tbody
        - @accounts.each do |account|
          %tr
            %td= account.owner
            %td
              %a{:href => "/transactions/#{account.account_id}"}= account.account_number
            %td= account.bank_code
            %td= account.iban
            %td.txa-r.ws-nw= currency(account.balance.balance, :unit => account.currency)
