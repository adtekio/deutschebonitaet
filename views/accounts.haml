.panel.panel-primary
  .panel-heading
    %h3.panel-title Account Details
  .panel-body
    - if @accounts.size == 0
      No Account available,
      %a{ :href => "/add_account" } add account.
    - else
      %a{ :href => "/add_account" } Add Account.
      %hr
      = haml :"_js_tablesorter", :locals => {:tableid => "acctable" }
      %table#acctable.colorit.w-100p.tablesorter
        %thead
          %tr
            %th Owner
            %th Account Number
            %th Bank Code
            %th Iban
            %th Type
            %th.txa-r Balance
        %tbody
          - @accounts.each do |account|
            %tr
              %td= account.owner
              %td
                %a{:href => "/transactions/#{account.id}"}= account.account_number
              %td= account.bank.figo_bank_code
              %td= account.iban
              %td= account.account_type
              %td.txa-r.ws-nw= currency(account.last_known_balance, :unit => account.currency)
