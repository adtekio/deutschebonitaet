= haml :"_js_graph"

.panel.panel-primary
  .panel-heading
    %h3.panel-title Geprüfter Bonität
  .panel-body
    .row
      .col-md-12
        %img{ :height => "50px", :src => "#{$hosthandler.badge.url}/badge/#{params[:eid]}.svg" }
    .row
      .col-md-12
        - if @user.nil?
          Rating for the Unknown User
        - else
          Rating for
          = @user.name

= haml :"_graph_panel", :locals => {:title => "Bonitätsverlauf", :id=>"chart1" }

:javascript
  $(document).ready(function(){
    graphit('#chart1', "/api/rating/#{params[:eid]}.json");
  });
