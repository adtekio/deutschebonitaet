.panel.panel-primary
  .panel-heading
    %h3.panel-title Account Details
  .panel-body
    %table.colorit.w-100p
      %tr
        %th Account Owner
        %td= @account.owner
      %tr
        %th Account Number
        %td= @account.account_number
      %tr
        %th Bank Nane
        %td= @account.bank.figo_bank_name || @account.bank.iban_bank_name
      %tr
        %th IBAN
        %td= @account.iban
      %tr
        %th Balance
        %td
          = currency(@account.last_known_balance, :unit => @account.currency)

.panel.panel-primary
  .panel-heading
    %h3.panel-title Transactions
  .panel-body
    = haml :"_js_tablesorter", :locals => {:tableid => "transtable" }
    %table#transtable.colorit.w-100p.tablesorter
      %thead
        %tr
          %th Date
          %th Name
          %th Account Number
          %th Purpose
          %th Type
          %th.txa-r Amount
      %tbody
        - (@transactions || []).sort_by(&:value_date).each do |transaction|
          %tr
            %td.p-5px= format_date(transaction.value_date)
            %td= transaction.name
            %td= @account.account_number
            %td= transaction.purpose
            %td= transaction.transaction_type
            %td.txa-r.ws-nw.p-5px{:class => transaction.amount < 0 ? "c-red" : "c-blue"}= currency(transaction.amount, :unit => @account.currency)
