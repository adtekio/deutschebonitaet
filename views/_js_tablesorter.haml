:javascript
  $(document).ready(function()
      {
        $.tablesorter.addParser({
            // set a unique id
            id: 'amount',
            is: function(s) {
                // return false so this parser is not auto detected
                return false;
            },
            format: function(s) {
                // format your data for normalization
                return s.toLowerCase().replace(/,/,'').replace(/eur /,'');
            },
            // set type, either numeric or text
            type: 'numeric'
        });

        $("##{tableid}").tablesorter({
          headers: {
            5: {
              sorter: 'amount'
            }
          }
        });
      }
  );
